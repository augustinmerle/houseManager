       </div>
       <div class="row-fluid">
       <div class="span8">
         {% block content %}{% endblock %}
       </div><!--/span-->
     </div><!--/row-->
   </div><!--/row fluid--> 


 </div><!--/.fluid-container-->

		 <hr>
