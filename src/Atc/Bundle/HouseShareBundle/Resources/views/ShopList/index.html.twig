{% extends '::layout.html.twig' %}

{% block content -%}
    <h1>ShopList list</h1>


    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Article</th>
                <th>Ajouté le</th>
                <th>Acheté</th>
                <th>Author</th>
                <th>Buyer</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('shoplist_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.article }}</td>
                <td>{% if entity.addingDate %}{{ entity.addingDate|date('d/m/Y') }}{% endif %}</td>
                <td>{{ entity.isBought }}</td>
                <td>{{ entity.author }}</td>
                <td>{{ entity.buyer }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('shoplist_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('shoplist_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('shoplist_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>

    {% endblock %}
