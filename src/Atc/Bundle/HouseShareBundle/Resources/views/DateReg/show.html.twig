{% extends '::base.html.twig' %}

{% block body -%}
    <h1>DateReg</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ entity.url }}</td>
            </tr>
            <tr>
                <th>Bgcolor</th>
                <td>{{ entity.bgColor }}</td>
            </tr>
            <tr>
                <th>Fgcolor</th>
                <td>{{ entity.fgColor }}</td>
            </tr>
            <tr>
                <th>Cssclass</th>
                <td>{{ entity.cssClass }}</td>
            </tr>
            <tr>
                <th>Startdatetime</th>
                <td>{{ entity.startDatetime|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Enddatetime</th>
                <td>{{ entity.endDatetime|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Allday</th>
                <td>{{ entity.allDay }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('datereg') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('datereg_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('datereg_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
